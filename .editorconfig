root = true

[*]
insert_final_newline = true

[*.kt]
ktlint_code_style = android_studio
ktlint_function_naming_ignore_when_annotated_with = Composable

ij_kotlin_code_style_defaults = KOTLIN_OFFICIAL
ij_kotlin_name_count_to_use_star_import = 2147483647
ij_kotlin_name_count_to_use_star_import_for_members = 2147483647
ij_kotlin_packages_to_use_import_on_demand = unset

indent_size = 4
insert_final_newline = unset
max_line_length = 120

ktlint_standard_import-ordering = disabled
ktlint_standard_class-signature = disabled

ij_kotlin_keep_blank_lines_in_code = 1
ij_kotlin_keep_blank_lines_in_declarations = 1

ktlint_class_signature_rule_force_multiline_when_parameter_count_greater_or_equal_than = 2
ktlint_function_signature_rule_force_multiline_when_parameter_count_greater_or_equal_than = 2
ktlint_property_naming_constant_naming = pascal_case
ktlint_enum_entry_name_casing = camel_cases
ij_kotlin_spaces_around_logical_operators = true
ktlint_standard_backing-property-naming = disabled

ij_kotlin_allow_trailing_comma = unset
ij_kotlin_allow_trailing_comma_on_call_site = unset
ktlint_standard_trailing_comma_on_call_site = disabled
ktlint_standard_trailing_comma_on_declaration_site = disabled

ktlint_standard_type-argument-comment = disabled
ktlint_standard_type-parameter-comment = disabled
ktlint_standard_value-argument-comment = disabled
ktlint_standard_value-parameter-comment = disabled


